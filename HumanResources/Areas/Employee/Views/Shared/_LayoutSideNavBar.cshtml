<script>
    var permitControlURL = "/Employee/Home/PermitControl";

    function permitControl() {
        $.ajax({
            url: permitControlURL,
            type: 'POST',
            dataType: 'json',
        }).done(function (res) {
            if (res) {
                var localport = location.port;
                if (localport == "") {
                    window.location.replace("https://murettebatinsankaynaklari.azurewebsites.net/Employee/Employee/Permit");
                }
                else {
                    window.location.replace("https://localhost:" + localport + "/Employee/Employee/Permit");
                }
            }
            else {
                $("#modalShow").click();
            }
        });
    }
</script>
